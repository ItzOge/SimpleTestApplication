<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.simplequizapp.ResultActivity">

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE BOARD"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/correctAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/summary"
        android:layout_alignStart="@+id/summary"
        android:layout_below="@+id/summary"
        android:layout_marginTop="53dp"
        android:background="@drawable/button_round_text"

        android:text=""
        android:textColor="#000000"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/incorrectAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/correctAnswers"
        android:layout_alignStart="@+id/correctAnswers"
        android:layout_below="@+id/correctAnswers"
        android:layout_marginTop="61dp"
       android:background="@drawable/button_round_text_red"

        android:text=""
        android:textColor="#000000"
        android:textSize="19dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incorrectAnswers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="@drawable/button_border"
        android:text="REPLAY"
        android:id="@+id/replay" />

    <TextView
        android:id="@+id/quitMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/replay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:textColor="#000000"
        android:textSize="19dp"
        />


</RelativeLayout>
